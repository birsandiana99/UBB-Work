@{
    Layout = null;
}


<!DOCTYPE html>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script language="javascript">

    $(document).ready(function () {

        $("#update-btn").click(function () {
            $.get("/Main/updateDoc", { name: $("#dname").val(), k1: $("#k1").val(), k2: $("#k2").val(), k3: $("#k3").val(), k4: $("#k4").val(), k5: $("#k5").val() },
                function (data, status) {
                    if (data == 1) {
                        alert("Update successful");
                    }
                    else {
                        alert("something went wrong");
                    }
                });
        });

        $("#websites-btn").click(function () {
            $.get("/Main/showWebsites", {},
                function (data, status) {
                    $("#maindiv").html(data);
                });
        });
    }
    );

</script>


<style>
    body {
        background-color: lightcyan;
    }

    #mytable {
        background-color: lightcoral;
    }

    #websites-btn, #update-btn {
        background-color: lightcoral;
        border: 1px;
        border-color: deeppink;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
    }
    input {
        font-size: 10px;
        font-style: italic;
    }
    
    p{
        font-size: 16px;
    }

    h2{
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    h1{
        color: deeppink;
    }

</style>
</head>
<body>
    <html>
    <body>
        <h1>Docs</h1>

        <section id="update">
            <h2>
                Update a document's keywords
            </h2>
            <p>Name: <input type="text" name="dname" id="dname" /></p>
            <p>K1: <input type="text" name="k1" id="k1" /></p>
            <p>K2: <input type="text" name="k2" id="k2" /></p>
            <p>K3: <input type="text" name="k3" id="k3" /></p>
            <p>K4: <input type="text" name="k4" id="k4" /></p>
            <p>K5: <input type="text" name="k5" id="k5" /></p>
            <br /><br />
            <button type="button" id="update-btn"> Update </button>

        </section>


        <section>
            <h2>Websites</h2>
            
            <button type="button" id="websites-btn"> See all websites </button><br /><br />
            <div id="maindiv"> </div> <br />


        </section>
    </body>
</html>
